extends common/header

block title
	title 自主開課平台 | 高大通識中心
block body
	body.index-body
		div.wrapper
			h1.title-admin
				a(href="/")
					|自主開課平台 | 高大通識中心
			div.container_nav#con_nav
				nav
					ul
						li
							a(href="/logout").nav.login-link
								i.fa.fa-user
								| 登出
						li
							a(href="/admin") 系統設定
						li
							a(href="/admin/posts") 最新消息
			div.container
				table.userlist
					tr
						th 學號
						th 姓名
						th 系所
					each user in users
						tr
							td #{user.student_id}
							td #{user.username}
							td #{user.dept}

		include common/footer
